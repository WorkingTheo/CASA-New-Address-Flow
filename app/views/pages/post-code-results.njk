{% extends "layouts/journey.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block journey_form %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-width-container">

        <div class="govuk-form-group">
          {% call govukFieldset({
            legend: {
              text: "Select the patient's address",
              classes: "govuk-fieldset__legend--l"
            }
          }) %}
          {% endcall %}
          {{ casaGovukRadios({
              classes: "govuk-radios--inline",
              casaValue: formData.address,
              casaErrors: formErrors,
              name: "address",
              items: addressOptions
            }) }}
        </div>
      </div>
    </div>
  </div>

  <a href='{{ waypointUrl({ waypoint: casa.waypoint, skipTo: "address-manual" }) }}' class="govuk-link">
    Enter the patient's address manually
  </a>

{% endblock %}